{
  "name": "ias-editor",
  "productName": "IAS Editor",
  "description": "An interactive IDE and debugger for IAS (Institute for Advanced Study) computer programs.",
  "author": "Marc Gulgulian <markgulgulian@gmail.com>",
  "homepage": "https://github.com/developedbymarc/ias-editor",
  "license": "MIT",
  "version": "0.0.0",
  "main": "main.cjs",
  "build": {
    "appId": "com.haigazian.ias-editor",
    "productName": "IAS Editor",
    "directories": {
      "buildResources": "build",
      "output": "dist/packages"
    },
    "files": [
      "main.cjs",
      "ansi-to-html.cjs",
      "preload.js",
      "dist/renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/bin/",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "publish": null,
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icons/windows/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons/linux",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"vite\" \"node wait-for-port.js && electron .\"",
    "build:renderer": "vite build",
    "build:main": "tsc -b",
    "build": "npm run build:renderer && npm run build:main",
    "start": "electron .",
    "package": "electron-builder --publish never",
    "package:linux": "electron-builder --linux --publish never",
    "package:win": "electron-builder --win --x64 --publish never",
    "package:mac": "electron-builder --mac --publish never",
    "vite": "vite"
  },
  "dependencies": {
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.13",
    "codemirror": "^6.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "terser": "^5.46.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
